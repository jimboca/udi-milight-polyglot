<nodeDefs>
    <!-- Hub Node -->
    <nodeDef id="controller" nls="ctl">
        <editors />
        <sts>
            <st id="ST" editor="bool" />
        </sts>
        <cmds>
            <sends />
            <accepts>
                <cmd id="DISCOVER">
                </cmd>
            </accepts>
        </cmds>
    </nodeDef>

    <!-- Group of Lights -->
    <nodeDef id="MILIGHT_GROUP" nls="MGR">
        <editors />
        <sts>
            <st id="ST" editor="HCLST" />
            <st id="CLITEMP" editor="HKELVIN" />
            <st id="GV1" editor="MCOLOR" />  <!-- Color -->
            <st id="GV2" editor="MCLSAT" /> <!-- Saturation -->
            <st id="GV3" editor="MCLBRI" /> <!-- Brightness -->
        </sts>
        <cmds>
            <sends />
            <accepts>
                <cmd id="DON" />
                <cmd id="DOF" />
                <cmd id="WHITE_MODE"/>
                <cmd id="NIGHT_MODE"/>
                <cmd id="SET_COLOR">
                    <p id="" editor="MCOLOR" />
                </cmd>
                <cmd id="SET_SAT">
                    <p id="" editor="MCLSAT" init="GV2"/>
                </cmd>
                <cmd id="SET_BRI">
                    <p id="" editor="MCLBRI" init="GV3" />
                </cmd>
                <cmd id="CLITEMP">
                    <p id="" editor="MKELVIN" init="CLITEMP" />
                </cmd>
                <cmd id="SET_EFFECT">
                    <p id="" editor="MESEL" />
                </cmd>
            </accepts>
        </cmds>
    </nodeDef>

</nodeDefs>
